generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model ShortLink {
  id               String      @id @default(cuid())
  shortCode        String      @unique
  originalUrl      String      
  userId           String
  createdAt        DateTime    @default(now())
  lastClickedAt    DateTime?  
  clickCount       Int       @default(0)
  locations        Json?
  @@index([userId])
}